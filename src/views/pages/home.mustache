{{>partials/header}}

<body class="bg-gray-50 min-h-screen text-gray-800 font-sans px-6 py-8">

  <div class="max-w-5xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Cadastro de Usuários</h1>
    <hr class="mb-6 border-gray-300" />

    <div class="mb-6">
      <a href="/users/new">
        <button type="button"
          class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">Incluir Usuário</button>
      </a>
    </div>

    <h3 class="text-xl font-semibold mb-4">Lista de Usuários</h3>

    <div class="overflow-x-auto shadow rounded-lg mb-8">
      <table class="w-full text-left border-collapse bg-white">
      <thead class="bg-gray-200 text-gray-700">
        <tr>
        <th class="px-4 py-3">Nome</th>
        <th class="px-4 py-3">Sobrenome</th>
        <th class="px-4 py-3">Idade</th>
        <th class="px-4 py-3">Email</th>
        <th class="px-4 py-3">Interesses</th>
        <th class="px-4 py-3 text-center">Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#users}}
        <tr class="border-t hover:bg-gray-50">
        <td class="px-4 py-2">{{name.firstName}}</td>
        <td class="px-4 py-2">{{name.lastName}}</td>
        <td class="px-4 py-2">{{age}}</td>
        <td class="px-4 py-2">{{email}}</td>
        <td class="px-4 py-2">{{interests}}</td>
        <td class="px-4 py-2 flex gap-2 justify-center">
          <a href="/users/edit/{{_id}}">
          <button type="button"
          class="text-blue-600 hover:text-blue-800 transition text-xl">&#9998;</button>
          </a>
          <form action="/users/delete/{{_id}}" method="POST" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir?')">
          <button type="submit" class="text-red-600 hover:text-red-800 transition text-xl">&#128465;</button>
          </form>
        </td>
        </tr>
        {{/users}}
        {{^users}}
        <tr>
          <td colspan="6" class="px-4 py-2 text-center text-gray-500">Nenhum usuário cadastrado</td>
        </tr>
        {{/users}}
      </tbody>
      </table>
    </div>
  </div>
</body>

{{>partials/footer}}
